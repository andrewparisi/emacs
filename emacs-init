;;; Clipboard (mac only)
;; TODO: This is messy - find a good spot for this

(defun to-clipboard ()
  (interactive)
  (let ((start (region-beginning))
	(end   (region-end)))
    (shell-command-on-region start end "pbcopy")))

(evil-define-key 'visual 'evil-visual-state-map (kbd "C-y") 'to-clipboard)

